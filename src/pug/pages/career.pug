    script(src="js/libs/jquery.mCustomScrollbar.concat.min.js")
    script(src="js/template.js")
    script.
        $(document).ready(function () {

            // $('.slider-people__list').customScrollbar();
            $(window).on("load",function(){
                $(".slider-people__list").mCustomScrollbar({
                    axis:"x",
                    advanced:{
                        autoExpandHorizontalScroll: true,
                        updateOnContentResize: false
                    },
                    callbacks: {
                        onCreate: function () {
                            console.log("Plugin markup generated");
                            var outerContent = $('.mCSB_container');
                            var innerContent = $('.mCSB_container > div');

                            outerContent.scrollLeft((innerContent.width() - outerContent.width()) / 2);

                        }
                    }
                });

            });

        });